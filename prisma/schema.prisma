generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model UserImages {
  id            String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId        String          @map("user_id") @db.Uuid
  type          String?         @map("type")
  programId     String?         @map("program_id") @db.Uuid
  fileName      String          @map("file_name")
  base64Data    String          @map("base64_data") @db.Text
  createdAt     DateTime        @default(now()) @map("created_at")
  deletedAt     DateTime?       @map("deleted_at")
  user          User            @relation(fields: [userId], references: [id])
  program       Program?        @relation(fields: [programId], references: [id])
  checkInId     String?         @map("check_in_id") @db.Uuid
  checkIn       CheckIn?        @relation(fields: [checkInId], references: [id])
  progressPhoto ProgressPhoto[]

  @@index([userId])
  @@map("user_images")
}

model UserIntake {
  id                  String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId              String   @map("user_id") @db.Uuid
  sex                 String
  trainingGoal        String   @map("training_goal")
  daysAvailable       Int      @map("days_available")
  dailyBudget         Int?     @map("daily_budget")
  experienceLevel     String?  @map("experience_level")
  age                 Int?
  weight              Int?
  height              Int?
  trainingPreferences String[] @default([]) @map("training_preferences")
  additionalInfo      String?  @map("additional_info") @db.Text
  createdAt           DateTime @default(now()) @map("created_at")
  user                User     @relation(fields: [userId], references: [id])

  @@unique([userId])
  @@index([userId])
  @@map("user_intake")
}

model PromptLog {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String   @map("user_id") @db.Uuid
  prompt       String   @db.Text
  response     String   @db.Text
  success      Boolean  @default(true) @map("success")
  inputTokens  Int?     @map("input_tokens")
  outputTokens Int?     @map("output_tokens")
  model        String   @map("model")
  createdAt    DateTime @default(now()) @map("created_at")
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("prompt_log")
}

model User {
  id            String    @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email         String?   @unique @map("email")
  password      String?   @map("password")
  isPremium     Boolean   @default(false) @map("is_premium")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  name          String?
  image         String?
  emailVerified DateTime? @map("email_verified")
  
  accounts     Account[]
  userImages   UserImages[]
  userIntakes  UserIntake[]
  promptLogs   PromptLog[]
  workoutPlans WorkoutPlan[]
  programs     Program[]
  workoutLogs  WorkoutLog[]
  stats        UserStats[]
  checkIns     CheckIn[]
  activities   UserActivity[]
  nutritionLogs NutritionLog[]
  session      Session[]
  purchaseSessions PurchaseSession[]
  subscription   Subscription?
  appLogs        AppLog[]

  // Coach Mode relations
  isCoach      Boolean   @default(false) @map("is_coach")
  coachClients CoachClient[] @relation("CoachRelation")  // Users this coach manages
  coachOf      CoachClient[] @relation("ClientRelation") // Coaches managing this user

  // Email preferences
  emailReminders Boolean @default(true) @map("email_reminders")

  // Streak tracking
  streakCurrent        Int       @default(0) @map("streak_current")
  streakLongest        Int       @default(0) @map("streak_longest")
  streakLastActivityAt DateTime? @map("streak_last_activity_at")

  @@index([email])
  @@map("users")
}

model WorkoutPlan {
  id                     String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId                 String    @map("user_id") @db.Uuid
  programId              String    @map("program_id") @db.Uuid
  bodyFatPercentage   Float?    @map("body_fat_percentage") /// todo: remove
  muscleMassDistribution String?   @map("muscle_mass_distribution") @db.Text /// todo: remove
  daysPerWeek            Int       @map("days_per_week")
  dailyCalories          Int       @map("daily_calories")
  proteinGrams           Int       @map("protein_grams")
  carbGrams              Int       @map("carb_grams")
  fatGrams               Int       @map("fat_grams")
  mealTiming             String[]  @default([]) @map("meal_timing")
  progressionProtocol    String[]  @default([]) @map("progression_protocol")
  phase                  Int       @default(1) @map("phase")
  phaseExplanation       String?   @map("phase_explanation") @db.Text
  phaseExpectations      String?   @map("phase_expectations") @db.Text
  phaseKeyPoints         String[]  @default([]) @map("phase_key_points")
  splitType              String?   @map("split_type")
  createdAt              DateTime  @default(now()) @map("created_at")
  user                   User      @relation(fields: [userId], references: [id])
  workouts               Workout[]
  program                Program?  @relation(fields: [programId], references: [id])

  @@index([userId])
  @@index([programId])
  @@map("workout_plans")
}

model Workout {
  id            String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String       @map("name")
  focus         String       @map("focus")
  warmup        String?      @map("warmup") @db.Text
  cooldown      String?      @map("cooldown") @db.Text
  workoutPlanId String       @map("workout_plan_id") @db.Uuid
  dayNumber     Int          @map("day_number")
  workoutPlan   WorkoutPlan  @relation(fields: [workoutPlanId], references: [id], onDelete: Cascade)
  exercises     Exercise[]
  workoutLogs   WorkoutLog[]
  createdAt     DateTime     @default(now()) @map("created_at")

  @@index([workoutPlanId])
  @@map("workouts")
}

model ExerciseLibrary {
  id               String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name             String            @unique
  category         String            @default("default")
  equipment        String[]          @default([])
  description      String?           @db.Text
  instructions     String[]          @default([]) @db.Text
  commonMistakes   String[]          @default([]) @db.Text
  benefits         String[]          @default([]) @db.Text
  difficulty       Difficulty        @default(BEGINNER)
  isCompound       Boolean           @default(false)
  movementPattern  MovementPattern   @default(PUSH)
  targetMuscles    MuscleGroup[]     @default([])
  secondaryMuscles MuscleGroup[]     @default([])
  videoUrl         String?           @map("video_url")
  images           String[]          @default([])
  variations       ExerciseLibrary[] @relation("ExerciseVariations")
  parentExercise   ExerciseLibrary?  @relation("ExerciseVariations", fields: [parentId], references: [id])
  parentId         String?           @db.Uuid
  exercises        Exercise[]
  createdAt        DateTime          @default(now()) @map("created_at")

  // Lean generation fields
  defaultTier       ExerciseTier      @default(TIER_2) @map("default_tier")
  contraindications String[]          @default([])     // ["knee", "shoulder", "lower back"]
  environments      String[]          @default([])     // ["gym", "home", "outdoors", "travel"]

  // Coaching data for mid-workout AI chat
  coachingNotes     String?           @db.Text @map("coaching_notes") // Form cues, modifications, progressions in one block

  @@index([name])
  @@index([category])
  @@index([equipment])
  @@index([difficulty])
  @@index([isCompound])
  @@index([movementPattern])
  @@index([targetMuscles])
  @@index([secondaryMuscles])
  @@index([defaultTier])
  @@map("exercise_library")
}

enum ExerciseMeasureType {
  REPS
  TIME
  DISTANCE
  WEIGHT
  BODY_WEIGHT
}

enum ExerciseMeasureUnit {
  KG
  LB
  PERCENT
  SECONDS
  METERS
  KILOMETERS
}

model Exercise {
  id                String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  workoutId         String          @map("workout_id") @db.Uuid
  exerciseLibraryId String          @map("exercise_library_id") @db.Uuid
  name              String          @map("name")
  sets              Int             @map("sets") @default(1)
  reps              Int?            @map("reps")
  restPeriod        Int            @map("rest_period") @default(0)
  intensity         Int?            @map("intensity") @default(0)
  measureType       ExerciseMeasureType         @map("measure_type") @default(REPS)
  measureValue      Float?            @map("measure_value")
  measureUnit       ExerciseMeasureUnit?         @map("measure_unit") @default(LB)
  notes             String?         @map("notes") @db.Text
  instructions      String[]        @default([]) @map("instructions")
  sortOrder         Int             @map("sort_order") @default(0)

  workout           Workout         @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exerciseLibrary   ExerciseLibrary @relation(fields: [exerciseLibraryId], references: [id])
  exerciseLogs      ExerciseLog[]
  createdAt         DateTime        @default(now()) @map("created_at")

  @@index([workoutId])
  @@index([exerciseLibraryId])
  @@index([name])
  @@map("exercises")
}

model Program {
  id           String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String
  slug         String?        @unique @map("slug")
  description  String?        @db.Text
  createdBy    String         @map("created_by") @db.Uuid
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
  source       String?        @map("source") /// such as 'uploaded', 'ai', 'template', etc.

  // Template & Library fields
  isTemplate   Boolean        @default(false) @map("is_template")
  isPublic     Boolean        @default(false) @map("is_public")
  clonedFromId String?        @map("cloned_from_id") @db.Uuid
  cloneCount   Int            @default(0) @map("clone_count")

  // Metadata for filtering/display
  category     String?        @map("category") // strength, hypertrophy, powerlifting, athletic, general
  difficulty   String?        @map("difficulty") // beginner, intermediate, advanced
  durationWeeks Int?          @map("duration_weeks")
  daysPerWeek  Int?           @map("days_per_week")
  equipment    String[]       @default([]) @map("equipment")
  goals        String[]       @default([]) @map("goals")
  tags         String[]       @default([]) @map("tags")

  // SEO & display
  author       String?        @map("author")
  imageUrl     String?        @map("image_url")
  popularityScore Int         @default(0) @map("popularity_score")

  // Sharing
  shareId      String?        @unique @map("share_id")

  user         User           @relation(fields: [createdBy], references: [id])
  clonedFrom   Program?       @relation("ProgramClones", fields: [clonedFromId], references: [id])
  clones       Program[]      @relation("ProgramClones")
  workoutPlans WorkoutPlan[]
  userImages   UserImages[]
  workoutLogs  WorkoutLog[]
  stats        UserStats[]
  checkIns     CheckIn[]
  activities   UserActivity[]

  @@index([name])
  @@index([slug])
  @@index([createdBy])
  @@index([description])
  @@index([isTemplate])
  @@index([isPublic])
  @@index([category])
  @@index([difficulty])
  @@index([shareId])
  @@map("programs")
}

model WaitlistLead {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String   @unique
  source    String? // e.g., "landing_page"
  status    String?  @default("active") // "active", "converted", "unsubscribed"
  cookie    String?  @map("cookie")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("waitlist_leads")
}

enum MuscleGroup {
  // Upper Body - Front
  CHEST
  SHOULDERS
  SHOULDERS_FRONT // anterior deltoid
  SHOULDERS_SIDE // lateral deltoid
  SHOULDERS_REAR // posterior deltoid
  BICEPS
  TRICEPS
  FOREARMS

  // Upper Body - Back
  UPPER_BACK // general upper back area
  TRAPS
  TRAPEZIUS
  TRAPEZIUS_UPPER
  TRAPEZIUS_MIDDLE
  TRAPEZIUS_LOWER
  LATS
  RHOMBOIDS
  BACK

  // Core
  CORE_FRONT // rectus abdominis
  CORE_SIDE // obliques
  LOWER_BACK // erector spinae
  CORE

  // Lower Body - Front
  QUADRICEPS
  HIP_FLEXORS

  // Lower Body - Back
  HAMSTRINGS
  GLUTES
  CALVES
  CALVES_OUTER // gastrocnemius
  CALVES_INNER // soleus

  // Stabilizers
  ROTATOR_CUFF
  SERRATUS
  HIP_ABDUCTORS
  HIP_ADDUCTORS

  // Other
  NECK
  OTHER
}

enum MovementPattern {
  PUSH
  PULL
  HINGE
  SQUAT
  LUNGE
  CARRY
  ROTATION
  PLANK
  OTHER
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
  OTHER
}

enum ExerciseTier {
  TIER_1  // Main lifts - typically programmed first (squat, deadlift, bench)
  TIER_2  // Supporting movements - typically middle (lunges, RDLs, dips)
  TIER_3  // Accessories - typically last (curls, raises, abs)
}

model WorkoutLog {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String    @map("user_id") @db.Uuid
  workoutId   String    @map("workout_id") @db.Uuid
  programId   String    @map("program_id") @db.Uuid
  startedAt   DateTime  @default(now()) @map("started_at")
  completedAt DateTime? @map("completed_at")
  status      String    @default("in_progress") // in_progress, completed, abandoned
  notes       String?   @db.Text

  user         User          @relation(fields: [userId], references: [id])
  workout      Workout       @relation(fields: [workoutId], references: [id])
  program      Program       @relation(fields: [programId], references: [id])
  exerciseLogs ExerciseLog[]

  @@index([userId])
  @@index([workoutId])
  @@map("workout_logs")
}

model ExerciseLog {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  workoutLogId String    @map("workout_log_id") @db.Uuid
  exerciseId   String    @map("exercise_id") @db.Uuid
  startedAt    DateTime  @default(now()) @map("started_at")
  completedAt  DateTime? @map("completed_at")
  notes        String?   @db.Text

  workoutLog WorkoutLog @relation(fields: [workoutLogId], references: [id])
  exercise   Exercise   @relation(fields: [exerciseId], references: [id])
  setLogs    SetLog[]

  @@index([workoutLogId])
  @@index([exerciseId])
  @@map("exercise_logs")
}

model SetLog {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  exerciseLogId String   @map("exercise_log_id") @db.Uuid
  setNumber     Int      @map("set_number")
  weight        Float? // Optional for bodyweight exercises
  reps          Int
  notes         String?  @db.Text
  completedAt   DateTime @default(now()) @map("completed_at")

  exerciseLog ExerciseLog @relation(fields: [exerciseLogId], references: [id])

  @@index([exerciseLogId])
  @@map("set_logs")
}

model UserStats {
  id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String @map("user_id") @db.Uuid
  programId String @map("program_id") @db.Uuid
  checkInId String @map("check_in_id") @db.Uuid @unique

  weight  Float?  @map("weight")
  bodyFatLow Float?  @map("body_fat_low")
  bodyFatHigh Float?  @map("body_fat_high")
  muscleMassDistribution String?   @map("muscle_mass_distribution") @db.Text
  notes   String? @map("notes") @db.Text

  // Wellness Metrics
  sleepHours   Float? @map("sleep_hours")
  sleepQuality Int?   @map("sleep_quality") // 1-10 scale
  energyLevel  Int?   @map("energy_level") // 1-10 scale
  stressLevel  Int?   @map("stress_level") // 1-10 scale
  soreness     Int?   @map("soreness") // 1-10 scale
  recovery     Int?   @map("recovery") // 1-10 scale

  // Nutrition Tracking
  calories      Int?
  proteinGrams  Float? @map("protein_grams")
  carbGrams     Float? @map("carb_grams")
  fatGrams      Float? @map("fat_grams")
  waterLiters   Float? @map("water_liters")
  dietAdherence Int?   @map("diet_adherence") // 1-10 scale
  hungerLevels  Int?   @map("hunger_levels") // 1-10 scale
  cravings      Int?   @map("cravings") // 1-10 scale

  // Body Measurements
  chest          Float? @map("chest")
  waist          Float? @map("waist")
  hips           Float? @map("hips")
  bicepLeft      Float? @map("bicep_left")
  bicepRight     Float? @map("bicep_right")
  bicepLeftFlex  Float? @map("bicep_left_flex")
  bicepRightFlex Float? @map("bicep_right_flex")
  thighLeft      Float? @map("thigh_left")
  thighRight     Float? @map("thigh_right")
  calfLeft       Float? @map("calf_left")
  calfRight      Float? @map("calf_right")

  // Progress Photos
  photos ProgressPhoto[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user    User    @relation(fields: [userId], references: [id])
  program Program @relation(fields: [programId], references: [id])
  checkIn CheckIn @relation(fields: [checkInId], references: [id])

  @@index([userId])
  @@index([programId])
  @@index([checkInId])
  @@map("user_stats")
}

model CheckIn {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  programId String   @map("program_id") @db.Uuid
  type      String   @default("progress") // 'initial' or 'progress' or 'end'
  date      DateTime @default(now()) @map("date")
  notes     String?  @map("notes") @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user          User            @relation(fields: [userId], references: [id])
  program       Program         @relation(fields: [programId], references: [id])
  stats         UserStats[]
  photos        UserImages[]
  progressPhoto ProgressPhoto[]

  @@index([userId])
  @@index([programId])
  @@map("check_ins")
}

model ProgressPhoto {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  checkInId   String    @map("check_in_id") @db.Uuid
  userImageId String    @map("user_image_id") @db.Uuid
  type        PhotoType @map("type")
  userStatsId String?    @db.Uuid @map("user_stats_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  checkIn     CheckIn    @relation(fields: [checkInId], references: [id])
  userImage   UserImages @relation(fields: [userImageId], references: [id])
  userStats   UserStats? @relation(fields: [userStatsId], references: [id])

  @@index([checkInId])
  @@index([userImageId])
  @@map("progress_photos")
}

enum PhotoType {
  FRONT
  BACK
  SIDE_LEFT
  SIDE_RIGHT
  CUSTOM
}

model UserActivity {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  programId String   @map("program_id") @db.Uuid
  type      String // 'login', 'visit', etc.
  timestamp DateTime @default(now())
  metadata  Json? // Additional data like device info, page visited, etc.

  user    User    @relation(fields: [userId], references: [id])
  program Program @relation(fields: [programId], references: [id])

  @@index([userId])
  @@index([programId])
  @@index([type])
  @@map("user_activities")
}

model NutritionLog {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  date      DateTime @db.Date
  protein   Int      // grams
  carbs     Int      // grams
  fats      Int      // grams
  calories  Int
  source    NutritionSource @default(MANUAL)
  notes     String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
  @@map("nutrition_logs")
}

enum NutritionSource {
  MANUAL
  SCREENSHOT
}

model Account {
  id                String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String  @map("user_id") @db.Uuid
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PurchaseSession {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String    @map("user_id") @db.Uuid
  status      String    @default("pending") // pending, completed, expired
  createdAt   DateTime  @default(now()) @map("created_at")
  completedAt DateTime? @map("completed_at")
  expiresAt   DateTime  @map("expires_at")
  user        User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("purchase_sessions")
}


model Subscription {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String    @unique @db.Uuid @map("user_id")
  stripeCustomerId String?  @unique @map("stripe_customer_id")
  stripePriceId   String?  @map("stripe_price_id")
  stripeSubscriptionId String? @unique @map("stripe_subscription_id")
  status          SubscriptionStatus @map("status")
  currentPeriodStart DateTime @map("current_period_start")
  currentPeriodEnd   DateTime @map("current_period_end")
  cancelAtPeriodEnd  Boolean @default(false) @map("cancel_at_period_end")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user            User      @relation(fields: [userId], references: [id])
  @@index([userId])
  @@map("subscriptions")
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
  TRIAL
}

// Coach Mode - allows trainers to manage clients
model CoachClient {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  coachId   String   @map("coach_id") @db.Uuid
  clientId  String?  @map("client_id") @db.Uuid

  // Invite system for clients who don't have accounts yet
  inviteEmail   String?  @map("invite_email")
  inviteToken   String?  @unique @map("invite_token")
  inviteStatus  InviteStatus @default(PENDING) @map("invite_status")
  inviteSentAt  DateTime? @map("invite_sent_at")

  // Relationship metadata
  nickname      String?  // Coach's nickname for client
  notes         String?  @db.Text
  status        ClientStatus @default(ACTIVE)

  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  coach         User     @relation("CoachRelation", fields: [coachId], references: [id])
  client        User?    @relation("ClientRelation", fields: [clientId], references: [id])

  @@unique([coachId, clientId])
  @@unique([coachId, inviteEmail])
  @@index([coachId])
  @@index([clientId])
  @@index([inviteToken])
  @@map("coach_clients")
}

enum InviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
  CANCELLED
}

enum ClientStatus {
  ACTIVE
  PAUSED
  ARCHIVED
}

// Logging
enum LogLevel {
  INFO
  WARN
  ERROR
}

model AppLog {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  level     LogLevel @default(INFO)
  category  String   @db.VarChar(100)
  type      String   @db.VarChar(100)
  message   String   @db.Text
  metadata  Json?    @db.JsonB
  userId    String?  @map("user_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id])

  @@index([level, createdAt])
  @@index([category, type])
  @@index([createdAt])
  @@map("app_logs")
}

// Claim flow - captures email + tool data before account creation
model PendingClaim {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String   @map("email")
  source    String   @map("source") // 'macro-calculator', 'body-fat', 'program-page', etc.
  toolData  Json?    @map("tool_data") // Stores macro results, BF%, etc.
  token     String   @unique @map("token")
  used      Boolean  @default(false) @map("used")
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")

  @@index([email])
  @@index([token])
  @@map("pending_claims")
}
