{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "src/app/api/programs/generate/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/programs/generate/stream/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/meal-prep/generate/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/photos/analyze/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/nutrition/parse/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
